{
  "extends": "@tsconfig/react-native/tsconfig.json",
  "compilerOptions": {
    "jsx": "react",
    "baseUrl": "./app",                       /* Base directory to resolve non-absolute module names. */
    "paths": {
      "@app/*": [
        "app/*"
      ],
      "typeRoots": [
        "./app/types"
      ],
       // Configure absolute import paths
       "@components/*": ["components/*"],
       "@screens/*": ["screens/*"],
       "@context/*": ["./context/*"],
       // Add more paths as needed
    },
    
  }
}
